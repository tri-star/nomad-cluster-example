# Increase log verbosity
log_level = "DEBUG"

# Setup data dir
data_dir = "/var/lib/nomad/client"


client {
    enabled = true
    server_join = {
        retry_join = [ "{{ self_ip }}" ]
        retry_max = 3
        retry_interval = "15s"
    }
{% if env == 'vagrant' %}
    network_interface = "eth1"
{% endif %}
}

ports {
    http = 5656
}
